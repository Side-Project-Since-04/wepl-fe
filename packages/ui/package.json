{
  "name": "@wepl/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "private": true,
  "license": "MIT",
  "exports": {
    "./*": "./dist/src/*/index.js",
    "./components/*": "./dist/src/components/*/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && npm run tsc:build && npm run copy:svg && npm run tailwind:build",
    "tsc:build": "npx tsc -p tsconfig.build.json",
    "tailwind:build": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "copy:svg": "cpy 'src/**/*.svg' dist/src",
    "lint": "eslint src/",
    "dev": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.61",
    "@wepl/eslint-config": "*",
    "@wepl/tailwind-config": "*",
    "@wepl/typescript-config": "*",
    "autoprefixer": "^10.4.18",
    "cpy-cli": "^5.0.0",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.4.2",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "embla-carousel-react": "^8.1.3",
    "lucide-react": "^0.379.0",
    "react-day-picker": "^8.10.1",
    "react-hook-form": "^7.51.5",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  }
}
